#!/usr/bin/env python

"""Generate a tagged (dated) e-mail address.

This generates a dated-style tagged e-mail address.

Usage: %(program)s 
"""

import sys

import paths
from TMDA import Cookie
from TMDA import Defaults


program = sys.argv[0]

def usage(status, msg=''):
    print __doc__ % globals()
    if msg:
        print msg
    sys.exit(status)


def main():

    try:
        print Cookie.make_dated_address()
    except IndexError:
        usage(2)


if __name__ == '__main__':
    main()
